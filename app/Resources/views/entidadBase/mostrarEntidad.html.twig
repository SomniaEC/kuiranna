{% extends 'base.html.twig' %}
{% form_theme form 'form/form_customizations.html.twig' %}

{% block body %}
	<div class="formulario">
    {{ form_start(form) }}
    
    	{% if operacion is defined and operacion==constant('AppBundle\\ConstantesDeOperaciones::CREAR') %}
    	    {% set t_options = {} %}
    	{% else %}
    		{% set t_options = {'attr': {'disabled': 'true'} } %}
    	{% endif %}
    	
        {% block form %}{% endblock %}
        
        {% block buttons %}
        
            {% if operacion is defined and operacion==constant('AppBundle\\ConstantesDeOperaciones::CREAR') %}
            <div class="row">
            	<button type="submit">Guardar!</button>
            </div>
            {% endif %}
             <div class="row">
            	<a href="{{ path('listar_entidad', {'nombreEntidad':nombreEntidad}) }}">Atras</a>
            </div>
            
        {% endblock %}
    
    {{ form_end(form) }}
	</div>

{% endblock %}