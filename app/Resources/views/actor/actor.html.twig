<script type="text/javascript">
jQuery(document).ready(function() {

	$("form").validate({
		rules: {
			"actor[identificacion]": "digits",
			"actor[telefono]": "digits",
			"actor[telefonoContacto]": "digits",
			"actor[edad]": "digits",
			"actor[identificacionContacto]": "digits"
		}
	});
	
    //selects actor
	actorSelect($('.formulario'));

    //upercase
    $.each($('.uppercase'), function (key, value) {
        $(value).keyup(function () {
			$(this).val($(this).val().toUpperCase());
      	});
    });

    //edad
    $('#actor_fechaNacimiento').change(function () {
        $('#actor_edad').val(getAge($(this).val()));
	});
});
</script>

