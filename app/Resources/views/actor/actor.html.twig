{% extends 'entidadBase/mostrarEntidad.html.twig' %}

{% block form %}

        {{ form_row(form.tipo, t_options) }}
        {{ form_row(form.identificacion, t_options) }}
        {{ form_row(form.nombres, t_options) }}
        {{ form_row(form.telefono, t_options) }}
        {{ form_row(form.email, t_options) }}
        {{ form_row(form.fechaNacimiento, t_options) }}
        {{ form_row(form.edad, t_options) }}
        {{ form_row(form.sexo, t_options) }}
        {{ form_row(form.genero, t_options) }}
        {{ form_row(form.nacionalidad, t_options) }}
        {{ form_row(form.interculturalidad, t_options) }}
        {{ form_row(form.actividadEconomica, t_options) }}
        {{ form_row(form.lugarTrabajo, t_options) }}
        {{ form_row(form.instruccion, t_options) }}
        {{ form_row(form.capacidadEspecial, t_options) }}
        {{ form_row(form.relacion, t_options) }}
