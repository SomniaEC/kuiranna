{% extends 'entidadBase/mostrarEntidad.html.twig' %}


{% block form %}
<script type="text/javascript">
jQuery(document).ready(function() {
    var $provincia_canton = JSON.parse('{{ form.vars.provincia_canton|raw }}');
    var $canton_parroquia = JSON.parse('{{ form.vars.canton_parroquia|raw }}');
    bindSelects($('#bloque_direccion_provincia'), $('#bloque_direccion_canton'), $provincia_canton, 'codigo');
    bindSelects($('#bloque_direccion_canton'), $('#bloque_direccion_parroquia'), $canton_parroquia, 'codigo');
});
</script>
    
    {{ form_row(form.provincia, t_options) }}
    {{ form_row(form.canton, t_options) }}
    {{ form_row(form.parroquia, t_options) }}
    {{ form_row(form.sector, t_options) }}
    {{ form_row(form.zona, t_options) }}
    {{ form_row(form.callePrincipal, t_options) }}
    {{ form_row(form.calleSecundaria, t_options) }}
    {{ form_row(form.numero, t_options) }}
    {{ form_row(form.referencia, t_options) }}
    
{% endblock %}